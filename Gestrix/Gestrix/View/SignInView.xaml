<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gestrix.View.SignInView"
             Title="Login">
    
    <VerticalStackLayout>
        <Border StrokeShape="RoundRectangle"
                Padding="20"
                MaximumWidthRequest="300"
                MaximumHeightRequest="300"
                Background="{StaticResource BorderBackGroundColor}">

            <VerticalStackLayout HorizontalOptions="Center">

                <Label Text="Login"
                       TextColor="{StaticResource TextColor}"
                       FontSize="20"
                       Margin="0,0,10,0"/>

                <Border StrokeShape="RoundRectangle 20" 
                        Background="{StaticResource BorderBackgroundColor}">
                    <VerticalStackLayout>
                        <Label Text="Email"
                               TextColor="{StaticResource TextColor}"/>
                        <Entry Placeholder="Email" Text="{Binding Email}"
                               Margin="0,0,10,0"/>
                    </VerticalStackLayout>
                </Border>

                <Border StrokeShape="RoundRectangle 20">
                    <VerticalStackLayout>
                        <Entry Placeholder="Senha"
                               IsPassword="True" Text="{Binding Password}"
                               Margin="0,0,10,0"/>
                    </VerticalStackLayout>
                </Border>

                <Button Command="{Binding SignInCommand}"/>
                <Button Command="{Biding NavigateSignUpCommand}"/>


            </VerticalStackLayout>

        </Border>
    </VerticalStackLayout>
    
</ContentPage>