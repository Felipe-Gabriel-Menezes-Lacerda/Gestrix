<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Gestrix.ViewModel"
             x:DataType="local:SignInViewModel"
             x:Class="Gestrix.View.SignInView"
             Title="Login">
    
    <VerticalStackLayout VerticalOptions="Center">
        <Border StrokeShape="RoundRectangle"
                Padding="20"
                MaximumWidthRequest="400"
                MaximumHeightRequest="500"
                Background="{StaticResource BorderBackgroundColor}"
                >

            <VerticalStackLayout>

                <Label Text="Login"
                       TextColor="{StaticResource TextColor}"
                       FontSize="20"
                       Margin="0,0,10,0"/>

                <Label Text="Email"
                       TextColor="{StaticResource TextColor}"/>
                <Border StrokeShape="RoundRectangle 20" 
                        Background="{StaticResource BorderBackgroundColor}">
                    <VerticalStackLayout>
                        <Entry Placeholder="Email" Text="{Binding Email}"
                               Margin="0,0,10,0"
                               TextColor="{StaticResource TextColor}"/>
                    </VerticalStackLayout>
                </Border>

                <Border StrokeShape="RoundRectangle 20">
                    <VerticalStackLayout>
                        <Entry Placeholder="Senha"
                               IsPassword="True" Text="{Binding Password}"
                               Margin="0,0,10,0"
                               TextColor="{StaticResource TextColor}"/>
                    </VerticalStackLayout>
                </Border>

                <Button Command="{Binding SignInCommand}"
                        Text="Entrar"/>
                <Button Command="{Binding NavigateSignUpCommand}"
                        Text="Ainda nÃ£o tem uma conta?" HorizontalOptions="End"/>

                <Label x:Name="MessageLabel"/>
                


            </VerticalStackLayout>

        </Border>
    </VerticalStackLayout>
    
</ContentPage>